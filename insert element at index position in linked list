#include<stdio.h>
#include<stdlib.h>
struct node
{
    int data;
    struct node *next;
};
void traverse(struct node *ptr){
    if(ptr==NULL)
    {
        printf("linkedlist is empty");
    }
    else{
        printf("linkedlist is ");
        while(ptr != NULL)
        {
            printf("%d ",ptr->data);
            ptr=ptr->next;
        }
    }
}
struct node *at_index(struct node *ptr,int index,int data)
{
    struct node *temp=(struct node*)malloc(sizeof(struct node));
    struct node *p=ptr;
    struct node *q=ptr->next;
    for(int i=0;i<index;i++)
    {
        p=p->next;
        q=q->next;
    }
    temp->data=data;
    temp->next=q;
    p->next=temp;
    return ptr;

}
int main()
{
    struct node *head=(struct node*)malloc(sizeof(struct node));
    struct node *second=(struct node*)malloc(sizeof(struct node));
    struct node *third=(struct node*)malloc(sizeof(struct node));
    struct node *fourth=(struct node*)malloc(sizeof(struct node));
    struct node *h=NULL;
    head->data=4;
    head->next=second;

    second->data=8;
    second->next=third;

    third->data=12;
    third->next=fourth;

    fourth->data=16;
    fourth->next=NULL;

    traverse(head);
    printf("\n");
    h=at_index(head,1,1);
    traverse(h);
    return 0;
}
